env:
  browser: true
  jest: true
extends:
  - airbnb
  - prettier
parser: babel-eslint
plugins:
  - prettier
root: true
rules:
  complexity: ["error", 8]
  jsx-a11y/click-events-have-key-events: 0
  jsx-a11y/anchor-is-valid: 1
  import/no-extraneous-dependencies: 0 # packages/**/ don't exist on package.json
  import/prefer-default-export: 0
  prettier/prettier: 2
  sort-keys:
    - error
    - asc
    - caseSensitive: true
      natural: false
  react/no-multi-comp: ["error", { "ignoreStateless": false }]
  react/jsx-filename-extension: 0
  react/jsx-one-expression-per-line: 0
  no-unused-expressions: ["error", {"allowTernary": true}]
overrides:
  - files:
    - "*.test.js"
    rules:
      global-require: 0
  - files:
    - "test/e2e/**/*.js"
    rules:
      no-unused-expressions: 0
      sort-keys: 0
settings:
  import/resolver:
    alias:
      - ['src','./src']
